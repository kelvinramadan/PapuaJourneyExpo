# Handle line endings automatically for files detected as text
* text=auto

# Force shell scripts to always use LF line endings
*.sh text eol=lf
docker-entrypoint.sh text eol=lf

# Docker files should always use LF
Dockerfile text eol=lf
docker-compose.yml text eol=lf
docker-compose.yaml text eol=lf

# Python files should always use LF
*.py text eol=lf
requirements.txt text eol=lf

# Ensure these files are treated as binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary